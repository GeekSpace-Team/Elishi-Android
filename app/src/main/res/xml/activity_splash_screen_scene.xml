<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/second"
        motion:duration="1200"
        motion:motionInterpolator="linear"
        motion:autoTransition="animateToEnd"
        />
    <ConstraintSet android:id="@+id/start" >
        <Constraint
            android:id="@+id/logo_card"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.50"
            motion:layout_constraintHorizontal_bias="0.50"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/app_name"
            motion:layout_constraintStart_toEndOf="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@+id/logo_card"
            android:layout_marginTop="1000dp">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc"
            motion:layout_constraintStart_toEndOf="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/app_name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc_long"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/logo_card"
            motion:layout_constraintStart_toStartOf="@+id/logo_card"
            android:layout_marginTop="1000dp" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/second" >
        <Constraint
            android:id="@+id/logo_card"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.50"
            motion:layout_constraintHorizontal_bias="0.50"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/app_name"
            motion:layout_constraintStart_toEndOf="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1000dp"
            motion:layout_constraintTop_toTopOf="@+id/logo_card"
            android:layout_marginTop="16dp" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc"
            motion:layout_constraintStart_toEndOf="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/app_name"
            android:layout_marginStart="16dp" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc_long"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/logo_card"
            motion:layout_constraintStart_toStartOf="@+id/logo_card"
            android:layout_marginTop="1000dp" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/third" >
        <Constraint
            android:id="@+id/logo_card"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.50"
            motion:layout_constraintHorizontal_bias="0.50"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/app_name"
            motion:layout_constraintStart_toEndOf="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@+id/logo_card" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc"
            motion:layout_constraintStart_toEndOf="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/app_name"
            android:layout_marginStart="16dp" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc_long"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/logo_card"
            motion:layout_constraintStart_toStartOf="@+id/logo_card"
            android:layout_marginTop="16dp" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc_long"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/logo_card"
            motion:layout_constraintStart_toStartOf="@+id/logo_card"
            android:layout_marginTop="16dp">
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.27"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/logo_card" />
        <Constraint
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/logo_card"
            motion:layout_constraintStart_toStartOf="@+id/logo_card"
            android:layout_marginTop="1000dp"
            android:id="@+id/app_desc_long" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/second"
        motion:constraintSetEnd="@+id/third"
        motion:autoTransition="animateToEnd"
        motion:duration="800"/>
    <ConstraintSet android:id="@+id/fourth" >
        <Constraint
            android:id="@+id/logo_card"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.27"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.27" />
        <Constraint
            android:id="@+id/app_name"
            motion:layout_constraintStart_toEndOf="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            motion:layout_constraintTop_toTopOf="@+id/logo_card" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc"
            motion:layout_constraintStart_toEndOf="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/app_name"
            android:layout_marginStart="16dp" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/app_desc_long"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/logo_card"
            motion:layout_constraintStart_toStartOf="@+id/logo_card"
            android:layout_marginTop="16dp" >
            <CustomAttribute
                motion:attributeName="alpha"
                motion:customFloatValue="1" />
        </Constraint>

    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/third"
        motion:constraintSetEnd="@+id/fourth"
        motion:autoTransition="animateToEnd"
        motion:motionInterpolator="easeInOut"
        motion:duration="1200"
        />

</MotionScene>
